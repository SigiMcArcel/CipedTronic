<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Bicycle_header">

        <EditTextPreference
            app:key="pulse_per_revolution"
            app:persistent="true"
            app:title="@string/PulsesPerRevultion_title"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="wheel_radius"
            app:persistent="true"
            app:title="@string/radius_title"
            app:useSimpleSummaryProvider="true"/>

        <CheckBoxPreference
            app:key="device_light"
            app:persistent="true"
            app:title="light"
            app:useSimpleSummaryProvider="true"/>

        <CheckBoxPreference
            app:key="device_alarm"
            app:persistent="true"
            app:title="alarm"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Bluetooth">

        <EditTextPreference
            android:defaultValue="Default value"
            android:key="bluetooth_Address"
            android:title="Bluetooth Address"
            app:persistent="true"
            app:useSimpleSummaryProvider="true"/>
            android:selectable="false" />
    </PreferenceCategory>

</PreferenceScreen>